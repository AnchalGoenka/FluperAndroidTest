<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductDetailsActivity">
<LinearLayout
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true">
    <Button
        android:id="@+id/btn_update"
        android:layout_margin="@dimen/_10sdp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Update"/>
    <Button
        android:id="@+id/btn_delete"
        android:layout_margin="@dimen/_10sdp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete"/>

</LinearLayout>
    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:padding="@dimen/_10sdp"
            android:id="@+id/iv_productImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/tv_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:gravity="left"
            android:layout_gravity="left"/>
        <LinearLayout
            android:weightSum="2"
            android:padding="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text="Rs"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:layout_gravity="left"/>
            <TextView
                android:layout_marginStart="@dimen/_3sdp"
                android:id="@+id/tv_productSalePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text="Sale Price"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:layout_gravity="left"/>
            <TextView

                android:id="@+id/tv_productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:text="MRP"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:layout_gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Store :"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_gravity="left"/>

                <TextView
                    android:id="@+id/tv_storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="Store Name store"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text="Color :"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Color :"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_gravity="left"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:text="Description :"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_gravity="left"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="surnames evolved as a way to
             sort people into groups - by occupation,
             place of origin, clan affiliation, patronage, parentage,
             adoption, and even physical characteristics (like red hair).
             Many of the modern surnames in the dictionary can be traced
             back to Britain and Ireland."/>

    </LinearLayout>
</RelativeLayout>